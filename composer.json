{
    "name": "symbiote/silverstripe-contentreplace",
    "description": "This module replaces certain tags in WYSIWYG content with SilverStripe templates.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "symbiote"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Symbiote",
            "homepage": "https://www.symbiote.com.au/"
        },
        {
            "name": "Jason Wang",
            "email": "jason@symbiote.com.au"
        }
    ],
    "require": {
        "silverstripe/framework": "^4 || ^5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "phpcbf": "phpcbf src/ tests/",
        "phpcs": "phpcs src/ tests/"
    },
    "autoload": {
        "psr-4": {
            "Symbiote\\ContentReplace\\": "src/",
            "Symbiote\\ContentReplace\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "replace": {
		"jason-symbiote/silverstripe-contentreplace": "self.version"
	},
    "prefer-stable": true,
    "minimum-stability": "dev"
}
